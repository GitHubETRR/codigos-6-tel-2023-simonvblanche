notas=[]

cant = int(input("Ingrese la cantidad de notas: \n"))

for x in range(cant):
  valor=int(input("Ingrese un valor entero: \n"))
  notas.append(valor)

def media(notas):
  return sum(notas) / len(notas)

def mayor_nota(notas):
  return max(notas)

def menor_nota(notas):
  return min(notas)

print (media(notas))
print (mayor_nota(notas))
print (menor_nota(notas))
